@model LoginAuthentication.Views.Home.CreateAccountModel

@{
    ViewData["Title"] = "Create a new account";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container-sm w-50 p-3">
        <div class="border p-4 rounded">
            <h1>Create a new account</h1>
            <form asp-action="CreateAccount">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Repeat your password</label>
                </div>
                <button type="submit" class="btn btn-primary">Create Account</button>
            </form>
        </div>
    </div>


</div>
